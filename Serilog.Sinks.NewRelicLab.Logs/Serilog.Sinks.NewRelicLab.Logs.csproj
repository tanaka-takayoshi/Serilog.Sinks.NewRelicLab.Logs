<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>8.0</LangVersion>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <VersionPrefix>0.1.0</VersionPrefix>
    <VersionSuffix></VersionSuffix>
    <Authors>Takayoshi Tanaka</Authors>
    <Description>Send logs to New Relic Logs.</Description>
    <RepositoryUrl>https://github.com/tanaka-takayoshi/Serilog.Sinks.NewRelicLab.Logs</RepositoryUrl>
    <PackageTags>serilog;newrelic</PackageTags>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="NewRelic.LogEnrichers.Serilog" Version="1.0.0" />
    <PackageReference Include="Serilog.Sinks.Http" Version="5.0.0" />
  </ItemGroup>

</Project>
